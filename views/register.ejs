<div class="container my-5" style="height:100%;">
  <div class="row m-1 m-md-5 mt-5 mt-md-0 no-gutters shadow-lg">

    <div class="bg-white p-3 p-md-5">
      <img src="/img/logo.svg" alt="" class="mb-5">
      <h5 class="mb-3">Mendaftar</h5>
      <p class="fs-14 text-grey mb-5">Lengkapi data diri Anda sehingga dapat memverifikasi akun pribadi Anda dan
        mulai menyiapkan profil Anda.</p>
      <form id="registerPost" method="POST" action="/register" enctype="multipart/form-data">
        <div class="form-group pb-3">
          <label class="form-label">Nama Lengkap</label>
          <input type="text" name="name" maxlength="50" placeholder="Masukkan Nama Lengkap .." required="" id="judul"
            class="form-control form-light" id="exampleInputName1">
        </div>
        <div class="form-group pb-3">
          <label class="form-label">Email</label>
          <input type="email" name="email" maxlength="50" placeholder="Masukkan Email .." required=""
            class="form-control form-light" id="exampleInputName1">
        </div>
        <div class="form-group pb-3">
          <label class="form-label">Password</label>
          <input type="password" name="password" placeholder="Masukkan Password ..." required=""
            class="form-control form-light" id="exampleInputName1">
        </div>
        <div class="form-group pb-3">
          <label class="form-label">Upload Foto Profile</label>
          <input class="form-control" name="profile_pic" type="file" id="formFile" required="">
        </div>
        <div class="form-group pb-3">
          <label class="form-label">Universitas</label>
          <select class="form-select form-light" aria-label="Default select example" name="campuss_id" required="">
            <option selected>Pilih Universitas</option>
            <% for( let i=0; i < campuss.length; i++ ) { %>
              <option value=<%=campuss[i].campuss_id %>> <%= campuss[i].campuss_name %>
              </option>
              <% } %>
          </select>
        </div>
        <div class="form-group pb-3">
          <label class="form-label">Angkatan</label>
          <select class="form-select form-light" aria-label="Default select example" name="year" required="">
            <option selected>Pilih tahun</option>
            <% for( let i=30; i> 0; i-- ) { %>
              <% const year=2022 - i %>
                <option value=<%=year %>> <%= year %>
                </option>
                <% } %>
          </select>
        </div>
        <div class="form-group pb-3">
          <label class="form-label">Deskripsi</label>
          <textarea name="description" id="deskripsi" rows="5" placeholder="Tulis deskripsi disini .."
            class="form-control form-light" required=""></textarea>
        </div>
        <div class="row">
          <div class="col-lg-12 mt-3">
            <div class="row">
              <div class="col-lg-6 pt-3">
                Sudah memiliki akun? <a href="/login">Login</a>
              </div>
              <div class="col-lg-6">
                <button type="submit" class="btn btn-blue-dark w-100">Daftar Sekarang</button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>